{% extends 'base.html.twig' %}

{% block title %}véhicule{% endblock %}

{% block body %}

    <header class="container-fluid p-5 text-center bg-light">
        <h1>{{ vehicule.marque }} - {{ vehicule.modele }}</h1>
    </header>

    <main class="container-fluid ">
        <div class="row p-5 card mb-3">
            <div class="col-8 offset-2">
                <img src="{{ asset('img/vehicule/' ~ vehicule.img1) }}" alt="photo principale {{ vehicule.marque }}" class="w-100 card-img-top">
                <div class="card-body">
                    <h2 class="py-3 card-title">{{ vehicule.marque }}</h2>
                    <p class="card-title">{{ vehicule.modele }}</p>
                    <ul>
                        <li class="card-text">Nombre de places : {{ vehicule.nombrePlace }}</li>
                        <li class="card-text">Immatriculation : {{ vehicule.immatriculation }}</li>
                        <li class="card-text">Couleur : {{ vehicule.couleur }} </li>
                        <li class="card-text">carburant : {{ vehicule.carburant }}</li>
                        <li class="card-text">Disponibilité : {{ vehicule.disponibilite }}</li>
                        <li class="card-text">Type de véhicule : {{ vehicule.typeVehicule }}</li>
                        <li class="card-text">Prix : {{ vehicule.prix|number_format(0, ',', ' ')}} €</li>
                    </ul>
                </div>
            </div>
            {% if vehicule.img2 is not null %}
                <div class="col-8 offset-2">
                    <h2 class="py-3">Autres photos</h2>
                    <img src="{{ asset('img/vehicule/' ~ vehicule.img2) }}" alt="photo principale {{ vehicule.marque }}" class="w-50">
                </div>
            {% endif %}
        </div>

        <div>
            <p>CONTACTER LE PROPRIETAIRE</p>
            <p>Nom : </p>
            <p>Numéro de téléphone : </p>
            <p>Email : </p>
        </div>

        <div class="text-right">
            <a href="{{ path('home') }}" type="button" class="btn btn-info">Retour à la page d'accueil</a>
        </div>
    </main>

{% endblock %}